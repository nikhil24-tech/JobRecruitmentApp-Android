<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jobrecruitmentapp_android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JobRecruitmentAppAndroid">
        <activity
            android:name=".activites.EmailLoginActivity"
            android:exported="false" />
        <activity
            android:name=".activites.EmailSignupActivity"
            android:exported="false" />
        <activity
            android:name=".activites.SignupOptionsActivity"
            android:exported="false" />
        <activity
            android:name=".activites.UserTypeActivity"
            android:exported="false" />
        <activity
            android:name=".activites.MainActivity"
            android:exported="false" />
        <activity
            android:name=".activites.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>